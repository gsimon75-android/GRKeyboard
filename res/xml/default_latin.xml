<GRKeyboard name="Latin"
    xmlns:a="http://schemas.android.com/apk/res/android">

    <!-- Template for keys

    <Key a:id="@id/key_">
        <State>
            <Action                             text=""/>
            <Action gesture="@integer/acute"    text=""/>
            <Action gesture="@integer/bar"      text=""/>
