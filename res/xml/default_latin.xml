            <Action gesture="@integer/cedilla"  text=""/>
            <Action gesture="@integer/dblacute" text=""/>
            <Action gesture="@integer/dot"      text=""/>
            <Action gesture="@integer/grave"    text=""/>
            <Action gesture="@integer/hacek"    text=""/>
            <Action gesture="@integer/macron"   text=""/>
