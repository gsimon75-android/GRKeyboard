<?xml version="1.0" encoding="utf-8"?>
<resources>

	<!-- STYLES -->

	<!-- NOTE: layout_marginXYZ cannot be set via themes, only via explicitely specified style,
	see http://stackoverflow.com/questions/13167529/android-margins-specified-in-custom-style-not-taking-effect -->

	<style name="GRKey" parent="@android:style/Widget.Holo.Button">
		<item name="android:minHeight">0px</item>
		<item name="android:padding">0px</item>
		<item name="android:layout_marginTop">-7px</item>
		<item name="android:layout_marginBottom">-7px</item>
		<item name="android:layout_marginLeft">-7px</item>
		<item name="android:layout_marginRight">-7px</item>
		<item name="android:layout_width">0px</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_weight">1</item>
		<!--item name="android:textColor">@android:color/primary_text_light</item-->
	</style>

	<style name="HelpKey" parent="@android:style/Widget.Holo.Button">
		<item name="android:minHeight">0px</item>
		<item name="android:padding">2sp</item>
		<item name="android:layout_margin">0px</item>
		<item name="android:textSize">10sp</item>
		<item name="android:textColor">#ffff00</item>
	</style>

	<!-- THEMES -->

	<style name="Theme.GRKeyApp" parent="@android:style/Theme.Holo">
		<item name="grKeyStyle">@style/GRKey</item>
		<item name="helpKeyStyle">@style/HelpKey</item>
	</style>

	<style name="Theme.GRKeyboard" parent="@android:style/Theme.NoTitleBar">
		<item name="android:buttonStyle">@style/GRKey</item>
	</style>

</resources>

